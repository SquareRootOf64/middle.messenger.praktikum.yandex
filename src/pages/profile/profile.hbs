<main>
    <div class="container">
        <h1>{{title}}</h1>
        <form>
            <label for="first_name">{{firstNameLabel}}</label>
            <input type="text" id="first_name" name="first_name">

            <label for="second_name">{{secondNameLabel}}</label>
            <input type="text" id="second_name" name="second_name">

            <label for="display_name">{{displayNameLabel}}</label>
            <input type="text" id="display_name" name="display_name">

            <label for="login">{{loginLabel}}</label>
            <input type="text" id="login" name="login">

            <label for="email">{{emailLabel}}</label>
            <input type="email" id="email" name="email">

            <label for="phone">{{phoneLabel}}</label>
            <input type="text" id="phone" name="phone">

            <label for="avatar">{{avatarLabel}}</label>
            <input type="file" id="avatar" name="avatar">

            <label for="oldPassword">{{oldPasswordLabel}}</label>
            <input type="password" id="oldPassword" name="oldPassword">

            <label for="newPassword">{{newPasswordLabel}}</label>
            <input type="password" id="newPassword" name="newPassword">

            <button type="submit">{{saveChangesButtonText}}</button>
            <a href="../chats/chats.hbs">{{backLinkText}}</a>
        </form>
    </div>
</main>

