<main>
    <div class="container">
        <div class="register">
            <h2>{{title}}</h2>

            <form>
                <label for="first_name">{{firstNameLabel}}</label>
                <input id="first_name" type="text" name="first_name" class="login-input">

                <label for="second_name">{{secondNameLabel}}</label>
                <input id="second_name" type="text" name="second_name" class="login-input">

                <label for="login">{{loginLabel}}</label>
                <input id="login" type="text" name="login" class="login-input">

                <label for="email">{{emailLabel}}</label>
                <input id="email" type="text" name="email" class="login-input">

                <label for="password">{{passwordLabel}}</label>
                <input id="password" type="text" name="password" class="login-input">

                <label for="phone">{{phoneLabel}}</label>
                <input id="phone" type="text" name="phone" class="login-input">

                <button name="create_user" class="enter-button">{{createUserButtonText}}</button>

                <a href="../login/login.hbs">{{signInText}}</a>
            </form>
        </div>
    </div>
</main>
